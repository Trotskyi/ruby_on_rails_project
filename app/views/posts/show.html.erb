<p id="notice"><%= notice %></p>
<article class="post">
  <section class="post-head">
    <h2><%=	 @post.title %></h2>
    <small>
      <time><%= @post.created_at.to_date.strftime("%d, %B, %Y")%></time> |

      <%= link_to 'Змінити', edit_post_path(@post)%> |

      <%= link_to 'Видалити', post_path(@post), method: :delete, data: { confirm: 'Ви впевненні?'}%>
    </small>
  </section>
  <section class="post-body">
    <%= image_tag @post.image.url(:large), class: 'img-show' if @post.image?%>
    <%= @post.body.html_safe %>
  </section>
</article>

